<div class="background">
	<main>
		<div class="appetizer-container">
			<h2>Edit Appetizers!</h2>

			<a id='link' href="/appetizer/{{appetizer.id}}">Back to Home Page or click Icon</a>
			<br><br>
			<div id="update-form" class="appetizer-container-show">

				<form action="/appetizer/{{appetizer._id}}?_method=PUT" method="POST" id="addnew">
					<label for="name">Appetizer Name</label>
					<input type="text" name="name" id="" placeholder="{{appetizer.appetizerName}}">
					<br>
					<label for="picture">Choose Picture</label>
					<input type="file" name="picture" id="">
					<br>
					<label for="directions">Directions</label>
					<input type="text" name="description" id="" placeholder="{{appetizer.directions}}">
					<br>
					<label for="ingridents">Ingridents</label>
					<input type="text" name="ingridents" id="" placeholder="{{appetizer.ingridents}}">
					<br>
					<label for="nutritionFacts">Nutrition Facts</label>
					<input type="text" name="nutritionFacts" id="" placeholder="{{appetizer.nutritionFacts}}">
					<br>
					<input class="button" type="submit" value="Update Appetizer">

				</form>
			</div>
	</main>
</div>
</div>
