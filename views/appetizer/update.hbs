<div class="background">
	<main>
		<div class="herb-container edit">
			<h2>Edit Appetizers!</h2>

			<a id='returnlink' href="/appetizer/{{appetizer.id}}">Return to Appetizer</a>
			<br><br>
			<div id="edit-form" class="herb-container-show">

				<form action="/appetizer/{{appetizer._id}}?_method=PUT" method="POST" id="addnew">
					<label for="name">Name</label>
					<input type="text" name="name" id="" placeholder="{{appetizer.appetizerName}}">
					<br>
					<label for="picture">Image</label>
					<input type="file" name="picture" id="">
					<br>
					<label for="directions">Directions</label>
					<input type="text" name="description" id="" placeholder="{{appetizer.directions}}">
					<br>
					<label for="appetizerName">Uses</label>
					<input type="text" name="ailmentName" id="" placeholder="{{appetizer.appetizerName}}">
					<br>
					<input class="button" type="submit" value="Update Appetizer">

				</form>

				<div id="img-preview">
					<img src="../../images/{{appetizer.picture}}">
				</div>

			</div>
	</main>
</div>
</div>
