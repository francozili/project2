<div class="background">
	<main>
		<div class="herb-container edit">
			<h2>Edit Dessert!</h2>

			<a id='returnlink' href="/dessert/{{dessert.id}}">Back to Home Page or click Icon</a>
			<br><br>
			<div id="edit-form" class="herb-container-show">

				<form action="/dessert/{{dessert._id}}?_method=PUT" method="POST" id="addnew">
					<label for="name">Dessert Name</label>
					<input type="text" name="name" id="" placeholder="{{dessert.dessertName}}">
					<br>
					<label for="picture">Choose Picture</label>
					<input type="file" name="picture" id="">
					<br>
					<label for="directions">Directions</label>
					<input type="text" name="description" id="" placeholder="{{dessert.directions}}">
					<br>
					<label for="ingridents">Ingridents</label>
					<input type="text" name="ingridents" id="" placeholder="{{dessert.ingridents}}">
					<br>
					<label for="nutritionFacts">Nutrition Facts</label>
					<input type="text" name="nutritionFacts" id="" placeholder="{{dessert.nutritionFacts}}">
					<br>
					<input class="button" type="submit" value="Update Dessert">

				</form>
			</div>
	</main>
</div>
</div>
